<!-- views/aft_informe_views.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Informes AFT -->
        <record id="aft.view_aft_informes_menu" model="ir.ui.view">
            <field name="name">aft.informes.menu</field>
            <field name="model">ir.ui.menu</field>
            <field name="arch" type="xml">
                <menuitem id="aft.menu_aft_informes_root" name="Informes AFT"/>
            </field>
        </record>
        <record id="aft.menu_aft_informes" model="ir.ui.menu">
            <field name="name">Informes AFT</field>
            <field name="model">aft.report</field>
            <field name="parent_id" ref="aft.menu_aft_root"/>
            <field name="sequence" eval="30"/>
            <field name="action" ref="aft.action_aft_informes"/>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <!-- Vista de árbol para informes-->
        <record id="aft.view_aft_informes_tree" model="ir.ui.view">
            <field name="name">aft.informes.tree</field>
            <field name="model">aft.informes</field>
            <field name="arch" type="xml">
                <tree string="Informes AFT">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="category_id"/>
                </tree>
            </field>
        </record>
        <!-- Vista de formulario para informes-->
        <record id="aft.view_aft_informes_form" model="ir.ui.view">
            <field name="name">aft.informes.form</field>
            <field name="model">aft.informes</field>
            <field name="arch" type="xml">
                <form string="Informes AFT">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="category_id"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Acción para abrir la vista de informes -->
        <record id="aft.action_aft_informes" model="ir.actions.act_window">
            <field name="name">Informes AFT</field>
            <field name="res_model">aft.informes</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="aft.view_aft_informes_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aquí puedes ver y gestionar los informes de Activos Fijos.
                </p>
            </field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <!-- Menú para informes -->
        <menuitem id="aft.menu_aft_informes" 
                  name="Informes AFT" 
                  action="aft.action_aft_informes" 
                  parent="aft.menu_aft_root"
                  sequence="30"/>
    </data>
</odoo>