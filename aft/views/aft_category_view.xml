<!-- views/aft_category_views.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Categorías de Activos Fijos -->
        <record id="aft.view_aft_categorias_menu" model="ir.ui.view">
            <field name="name">aft.categorias.menu</field>
            <field name="model">ir.ui.menu</field>
            <field name="arch" type="xml">
                <menuitem id="aft.menu_aft_categorias_root" name="Categorías AFT"/>
            </field>
        </record>
        <record id="aft.menu_aft_categorias" model="ir.ui.menu">
            <field name="name">Categorías de Activos Fijos</field>
            <field name="model">aft.category</field>
            <field name="parent_id" ref="menu_aft_root"/>
            <field name="sequence" eval="20"/>
            <field name="action" ref="action_aft_category"/>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <!-- Vista de árbol para categorías -->
        <record id="view_aft_category_tree" model="ir.ui.view">
            <field name="name">aft.category.tree</field>
            <field name="model">aft.category</field>
            <field name="arch" type="xml">
                <tree string="Categorías de Activos Fijos">
                    <field name="code" string="Código"/>
                    <field name="name"/>
                    <field name="default_depreciation_rate" string="Tasa (%)"/>
                    <field name="asset_account_id" invisible="1"/>
                </tree>
            </field>
        </record>
        <!-- Vista de formulario para categorías -->
        <record id="view_aft_category_form" model="ir.ui.view">
            <field name="name">aft.category.form</field>
            <field name="model">aft.category</field>
            <field name="arch" type="xml">
                <form string="Categoría de Activo Fijo">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre de categoría"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="default_depreciation_rate"/>
                            </group>
                            <group>
                                <field name="asset_account_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notas">
                                <field name="note" placeholder="Observaciones sobre esta categoría..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Acción para abrir la vista de categorías -->
        <record id="action_aft_category" model="ir.actions.act_window">
            <field name="name">Categorías de Activos Fijos</field>
            <field name="res_model">aft.category</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Crea tu primera categoría de activo fijo
            </p>
            </field>
        </record>
        <!-- Menú principal -->
        <menuitem id="menu_aft_root" name="Activos Fijos" sequence="100"/>
        <!-- Menú para categorías -->
        <menuitem 
        id="menu_aft_category" 
        name="Categorías" 
        action="action_aft_category" 
        parent="menu_aft_root"
        sequence="10"
    />
    </odoo>