<!-- views/aft_areas_views.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Áreas -->
        <record id="aft.view_aft_areas_menu" model="ir.ui.view">
            <field name="name">aft.areas.menu</field>
            <field name="depreciation_expense_account_id"/>
            <field name="model">ir.ui.menu</field>
            <field name="arch" type="xml">
                <menuitem id="aft.menu_aft_areas_root" name="Áreas"/>
            </field>
        </record>
        <record id="aft.menu_aft_areas" model="ir.ui.menu">
            <field name="name">Áreas</field>
            <field name="model">aft.area</field>
            <field name="parent_id" ref="aft.menu_aft_root"/>
            <field name="sequence" eval="25"/>
            <field name="action" ref="aft.action_aft_areas"/>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <!-- Vista de árbol para áreas -->
        <record id="aft.view_aft_areas_tree" model="ir.ui.view">
            <field name="name">aft.areas.tree</field>
            <field name="depreciation_expense_account_id"/>
            <field name="model">aft.areas</field>
            <field name="arch" type="xml">
                <tree string="Áreas">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="aft.view_aft_areas_form" model="ir.ui.view">
            <field name="name">aft.areas.form</field>
            <field name="model">aft.areas</field>
            <field name="arch" type="xml">
                <form string="Áreas">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="aft.action_aft_areas" model="ir.actions.act_window">
            <field name="name">Áreas</field>
            <field name="res_model">aft.areas</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="aft.view_aft_areas_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aquí puedes ver y gestionar las áreas de Activos Fijos.
                </p>
            </field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        
        <!-- Menú principal -->
        <menuitem id="aft.menu_aft_root" name="Activos Fijos" sequence="100"/>
        <!-- Menú para Áreas -->
        <menuitem id="aft.menu_aft_areas" 
                  name="Áreas" 
                  action="aft.action_aft_areas" 
                  parent="aft.menu_aft_root"/>

    </data>
</odoo>